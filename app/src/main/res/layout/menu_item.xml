<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/teal_700"
    android:layout_marginBottom="8dp">

    <!-- Image Menu Item -->
    <ImageView
        android:id="@+id/menuItemImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:contentDescription="Menu Image" />

    <!-- Text Content for Menu Item -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Item Name -->
        <TextView
            android:id="@+id/menuItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Menu"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Item Price -->
        <TextView
            android:id="@+id/menuItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga: $0.00"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Item Description -->
        <TextView
            android:id="@+id/menuItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Menu"
            android:textColor="#B0BEC5"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Order Button -->
    <Button
        android:id="@+id/btnPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesan"
        android:textColor="#FFFFFF"
        android:background="@color/teal_700"
        android:layout_gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp" />
</LinearLayout>
